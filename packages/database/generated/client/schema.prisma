generator client {
  provider = "prisma-client-js"
  output   = "./../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Sexs {
  MALE
  FEMALE
}

enum AgeGroupNames {
  BABY
  YOUNG
  ADULT
  OLD
}

model Categories {
  id      String    @id @default(uuid())
  name    String
  animals Animals[]

  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("categories")
}

model Animals {
  id          String        @id @default(uuid())
  name        String
  photo       String
  sex         Sexs
  castred     Boolean
  weight      Decimal
  age         AgeGroupNames
  description String
  adopted     Boolean
  categoryId  String
  category    Categories    @relation(fields: [categoryId], references: [id])

  deletedAt DateTime? @map("deleted_at")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  @@map("animals")
}
